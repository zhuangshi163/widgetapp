	function isFile_(){
		isDel = 1;
		setTimeout(function(){
			uexFileMgr.isFileExistByPath("wgt://data/uesrInfo.txt");
        }, 500);
	}	
    var len = 0;
	function pre_(f){
		switch(f){
			case 'best':
				var currentLoc = bestFlip.currentPoint;
				$id('best_prev').style.visibility = 'visible'; 
				$id('best_next').style.visibility = 'visible';
				if(currentLoc == 1) {$id('best_prev').style.visibility = 'hidden';}
				bestFlip.toPrev();
			break;
			case 'new':
				var currentLoc = newFlip.currentPoint;
				$id('new_prev').style.visibility = 'visible'; 
				$id('new_next').style.visibility = 'visible';
				if(currentLoc == 1) {$id('new_prev').style.visibility = 'hidden';}
				newFlip.toPrev();
			break;
			case 'hot':
				var currentLoc = hotFlip.currentPoint;
				$id('hot_prev').style.visibility = 'visible'; 
				$id('hot_next').style.visibility = 'visible';
				if(currentLoc == 1) {$id('hot_prev').style.visibility = 'hidden';}
				hotFlip.toPrev();
			break;
			case 'brands':
				var currentLoc = brandsFlip.currentPoint;
				$id('brands_prev').style.visibility = 'visible'; 
				$id('brands_next').style.visibility = 'visible';
				if(currentLoc == 1) {$id('brands_prev').style.visibility = 'hidden';}
				brandsFlip.toPrev();
			break;
			default:break;
		}
	}
	function next_(f){
		switch(f){
			case 'best':
				var currentLoc = bestFlip.currentPoint;
				$id('best_prev').style.visibility = 'visible'; 
				$id('best_next').style.visibility = 'visible';
				if(currentLoc == (bestNum -2)) {$id('best_next').style.visibility = 'hidden';}
				bestFlip.toNext();
			break;
			case 'new':
				var currentLoc = newFlip.currentPoint;
				$id('new_prev').style.visibility = 'visible'; 
				$id('new_next').style.visibility = 'visible';
				if(currentLoc == (newNum -2)) {$id('new_next').style.visibility = 'hidden';}
				newFlip.toNext();
			break;
			case 'hot':
				var currentLoc = hotFlip.currentPoint;
				$id('hot_prev').style.visibility = 'visible'; 
				$id('hot_next').style.visibility = 'visible';
				if(currentLoc == (hotNum -2)) {$id('hot_next').style.visibility = 'hidden';}
				hotFlip.toNext();
			break;
			case 'brands':
				var currentLoc = brandsFlip.currentPoint;
				$id('brands_prev').style.visibility = 'visible'; 
				$id('brands_next').style.visibility = 'visible';
				if(currentLoc == (hotNum -2)) {$id('brands_next').style.visibility = 'hidden';}
				brandsFlip.toNext();
			break;
			default:break;
		}
	}
	function calMovePoint(){
		var cp = addImgFlip.currentPoint;
		 /*if(cp == 0){
			$id("point_"+(cp+1)).className = "";
		}else if(cp == (len-1)){
			$id("point_"+(cp-1)).className = "";
		}else{
			$id("point_"+(cp+1)).className = "";
			$id("point_"+(cp-1)).className = "";
		}*/
		for(var i = 0; i < len; i++){
	    	if(cp == i){
	    		  document.getElementById("point_" + i).className = "w_order_show";
	    	}else{
	    		document.getElementById("point_" + i).className = "";
	    	}
	    }
		//$id("point_"+cp).className = "w_order_show";
	}
	function bestCallback(){
		var currentLoc = bestFlip.currentPoint;
		var maxPoint = bestFlip.maxPoint;
		$id('best_prev').style.visibility = 'visible'; 
		$id('best_next').style.visibility = 'visible';
		if(currentLoc == 0) {$id('best_prev').style.visibility = 'hidden';}
		if(currentLoc == maxPoint) {$id('best_next').style.visibility = 'hidden';}
		
	}
