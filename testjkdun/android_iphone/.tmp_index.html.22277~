	function checkWidgetUpdate(){
		  var platform = 0;
		  var updateurl = '';
		  var savePath = '';
		  var filepath2 = "/sdcard/android.apk";
		  uexDownloaderMgr.onStatus = function(opId,fileSize, percent, status){
			  if(status == 0){
				  var str = 'ä¸‹è½½è¿›åº¦ï¼?+percent+'%';
				  if(fileSize==-1) str = 'ä¸‹è½½ä¸­ï¼Œè¯·ç¨å€?..';
				  uexWindow.toast('1','5', str,'');
			  }else if (status == 1){
				  uexWindow.closeToast();
				  uexDownloaderMgr.closeDownloader('14');
				  uexWidget.installApp(filepath2);
			  }
			  else{
				  uexWindow.closeToast();
				  uexWindow.toast('0','5','ä¸‹è½½å¤±è´¥','2000');
				  uexDownloaderMgr.closeDownloader('14');
			  }
		  }
		  uexDownloaderMgr.cbCreateDownloader = function(opId,dataType,data){
				if(data == 0){
					//log('updateurl='+updateurl);
					  uexDownloaderMgr.download('14', updateurl, filepath2, '0');
				  }
				  else{
					  uexWindow.toast('0','5','ä¸‹è½½å¤±è´¥','2000');
				  }
			}
		  uexWindow.cbConfirm = function ConfirmSuccess(opId, dataType, data){
				if (data == 1) {
					if(platform==0){
						uexWidget.loadApp("", "", updateurl);
					}
					else if(platform==1) {
						uexDownloaderMgr.createDownloader("14");	
					}
				}
		  }
		  uexWidget.cbCheckUpdate = function (opCode, dataType, jsonData){
			    var obj = eval('('+jsonData+')');
				if(obj.result == 0){
					updateurl = obj.url;
					savePath = obj.name;
					var value = "ç¨å;æ›´æ–°";
					var mycars=value.split(";");
					uexWindow.confirm('', 'å½“å‰æœ‰æ–°ç‰ˆæœ¬ï¼Œæ˜¯å¦æ›´æ–?', mycars);		
				}else if(obj.result == 1){
					;//tips = "å½“å‰ç‰ˆæœ¬æ˜¯æœ€æ–°çš„";alert(tips);
				}else if(obj.result == 2){
					;//tips = "æœªçŸ¥é”™è¯¯";alert(tips);
				}else if(obj.result == 3){
					;//tips = "å‚æ•°é”™è¯¯";alert(tips);
				}
			}
		  uexWidgetOne.cbGetPlatform = function(opId,dataType,data){
				platform = data;
				if(data==0){ //iphone
					if(check_flag == "2"){
						uexWidget.checkUpdate();
					}else{
						uexWidget.loadApp(allUrl,"",allUrl);
					}
				}else if(data==1){ //android
					if(check_flag == "2"){
						uexWidget.checkUpdate();
					}else{
						uexWidget.loadApp("android.intent.action.VIEW", "text/html", allUrl);
					}
				}
				else{
				}
			}
		  check_flag = "2";//æ›´æ–°
		  uexWidgetOne.getPlatform();
	  }
	
	
